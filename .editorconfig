root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ino,c,cpp,h}]
indent_style = space
indent_size = 4

[{.gitconfig,.gitignore,gitcommit}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
